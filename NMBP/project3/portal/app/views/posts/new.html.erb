<!-- Page Heading -->
<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
        <small>create a new post</small>
        </h1>
    </div>
</div>

<div class="row">
	<div class="col-md-5">
	</div>
    <div class="col-md-5">
          <%= form_for :post do |f| %>
          <p>
			<%= f.label :title %><br>
			<%= f.text_field :title %>
		  </p>
          
          <p>
			<%= f.label :author %><br>
			<%= f.text_field :author %>
		  </p>
		  
		  <p>
			<%= f.label :content %><br>
			<%= f.text_area :content %>
		  </p>
		 
          <p>
			<%= f.label :image %><br>
			<%= f.text_field :image %>
		  </p>
		 
		  <p>
			<%= f.submit %>
		  </p>
		  <% end %>
     </div>
</div>        
        
